---
import Footer from '../components/Footer.astro';
const { url } = Astro;
const isPlayPage = url.pathname === "/home/play_interface";
const isStartPage = url.pathname === "/home";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Tides of Change</title>
  </head>

  <body class="bg-gray-900 text-white">
    <nav class="flex justify-between p-4">
      <a href="/home" class="text-3xl font-bold">
        Tides of Change
      </a>
      <!-- RIGHT SIDE: Optional nav links -->
      <ul class="flex space-x-4">
        { !isStartPage && (
          <li>
            <a href="/home/char_form" class="px-4 py-2 bg-yellow-500 text-black rounded hover:bg-yellow-700">
              Character Creation
            </a>
          </li>
        )}
        
        { !isStartPage && !isPlayPage && (
          <li><a href="/home/play_interface" class="px-4 py-2 bg-green-500 text-black rounded hover:bg-green-700">Start/Continue Your Adventure</a></li>
        )}
        
        { isPlayPage && (
          <li>
            <a href="/home/dice-roll" class="px-4 py-2 bg-green-700 text-white rounded hover:bg-green-900">
              Dice Roll
            </a>
          </li>
        )}
      </ul>
    </nav>
    
    <!-- MAIN CONTENT -->
    <main>
      <slot />
    </main>
    
    <!-- FOOTER -->
    <Footer />
  </body>
</html>

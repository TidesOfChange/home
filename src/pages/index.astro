---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
  <section
    class="relative flex flex-col items-center justify-center min-h-screen bg-cover bg-center"
    style="background-image: url('../../home/images/ocean.gif');"
  >
    <!-- Content goes above the overlay, so give it a higher z-index -->
    <div class="relative z-10 text-center p-8">
      <h1 class="text-7xl font-extrabold mb-4">Embark on Your Adventure</h1>
      <p class="text-xl mb-8">A journey awaits you in the mysterious realm of possibilities...</p>

      <div class="flex flex-col items-center gap-4">
        <a href="/home/Regions" class="px-6 py-3 bg-blue-600 text-white rounded hover:bg-blue-700 transition w-64 text-center">
          Explore the World
        </a>
        <a href="/home/char_form" class="px-6 py-3 bg-yellow-500 text-black rounded hover:bg-yellow-700 transition w-64 text-center">
          Create a Character
        </a>
        <a href="/home/play_interface" class="px-6 py-3 bg-green-500 text-black rounded hover:bg-green-700 transition w-64 text-center">
          Start Your Adventure
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

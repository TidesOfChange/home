---
import { Image } from "astro:assets";
import BaseLayout from '../layouts/BaseLayout.astro';
const images = await Astro.glob('../images/gallery/*');
---

<BaseLayout>
  <section class="min-h-screen flex flex-col items-center bg-base-200">
    <h1 class="text-3xl lg:text-5xl font-bold mt-10 px-4 text-center">Game Resources</h1>
    <div class="mx-auto container my-8 sm:columns-2 md:columns-3 lg:columns-4 xl:columns-5">
      {
        images.map((image) => (
          <Image
            src={image.default}
            alt={`Tides of Change art`}
            class="rounded-lg bg-base-300 mb-4 border border-transparent hover:border-base-300 shadow-sm hover:shadow-md"
          />
        ))
      }
    </div>
  </section>
</BaseLayout>
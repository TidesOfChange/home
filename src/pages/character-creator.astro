---
const title = "Character Creator";
import CharacterForm from "../components/character-creator/CharacterForm.jsx";
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
  <section class="min-h-screen flex flex-col items-center bg-base-200">
    
    <h1 class="text-4xl font-bold mb-4 mt-10">{title}</h1>

    <p class="text-center max-w-3xl mb-4">
      Welcome to the <strong>Character Creation</strong> process! Follow the steps below to build your character.
    </p>

    <CharacterForm client:load />
  </section>
</BaseLayout>

---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
    <div class="hero bg-base-200 min-h-[95vh]">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-4xl font-bold">Page Not Found</h1>
                <p class="py-6 text-lg">
                    This page doesn't exist! Check the URL and try again.
                </p>
                <a role="button" class="btn btn-primary" href="/home">Go Home</a>
            </div>
        </div>
    </div>
</BaseLayout>

---
const title = "Character Creation";
import CharacterForm from "../components/CharacterForm.jsx";
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
  <section class="min-h-screen flex flex-col items-center justify-center bg-gray-900 text-white p-8">
    
    <h1 class="text-4xl font-bold mb-4">{title}</h1>

    <p class="text-center max-w-2xl mb-6">
      Welcome to the <strong>Character Creation</strong> process! Follow the steps below to build your character. 
      You can skip steps or go back at any time.
    </p>

    <!-- Step Progress -->
    <div class="justify-center space-x-4 text-lg font-semibold mb-6">
      <span class="text-white rounded">1. Species</span> →
      <span class="text-white rounded">2. Class</span> →
      <span class="text-white rounded">3. Background</span> →
      <span class="text-white rounded">4. Stats</span> →
      <span class="text-white rounded">5. Finalize</span>
    </div>
      <CharacterForm client:load />
    </div>

  </section>
</BaseLayout>
